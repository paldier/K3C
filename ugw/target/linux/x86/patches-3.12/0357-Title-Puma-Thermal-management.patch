+/* Get the maximum junction temperature/throttle temperature */
+static int puma_get_tj_max(u32 *tj_max)
+{
+	u32 eax, edx;
+	u32 val;
+	int err = 0;
+
+	err = rdmsr_safe(MSR_IA32_TEMPERATURE_TARGET, &eax, &edx);
+   if (err == 0) {
+      val = (eax >> 16) & 0xff;
+      if (val)
+         *tj_max = val * 1000;
+      else {
+         err = -EINVAL;
+      }
+   }
+   
+	return err;
+}
