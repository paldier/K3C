+void serial_hsu_port_free(struct uart_hsu_port *up)
+{
+	uart_remove_one_port(&serial_hsu_reg, &up->port);
+	free_irq(up->port.irq, up);
+}
+EXPORT_SYMBOL(serial_hsu_port_free);
