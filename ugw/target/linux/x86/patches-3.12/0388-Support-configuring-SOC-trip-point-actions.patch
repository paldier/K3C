+static ssize_t store_soc_dts_te0(struct device *dev, struct device_attribute *attr, const char *buf, size_t count)
+{
+   unsigned int data;
+
+   if(sscanf(buf, "%x", &data) != 1) {
+      return -EINVAL;
+   } 
+      
+   if(puma_set_soc_dts_te(PUMA_PUNIT_TE_AUX0, data) < 0) {
+      return -EIO;
+   }
+
+   return count;
+}
