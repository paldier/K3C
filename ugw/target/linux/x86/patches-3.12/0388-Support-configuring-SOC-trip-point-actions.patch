+static ssize_t show_soc_dts_te0(struct device *dev, struct device_attribute *attr, char *buf)
+{
+   int ret_value;
+   unsigned int data = 0;
+   
+   ret_value = puma_get_soc_dts_te(PUMA_PUNIT_TE_AUX0, &data);
+
+   if(ret_value < 0) {
+      return -EIO;
+   } else {
+      return sprintf(buf, "0x%x\n", data);
+   }
+}
