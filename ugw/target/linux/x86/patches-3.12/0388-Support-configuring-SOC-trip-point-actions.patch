+#define PUMA_SOC_TE_DDR_2X_REFRESH  1
+#define PUMA_SOC_TE_BW_THROT        (1 << 1)
+#define PUMA_SOC_TE_DDR_FREQ_THROT  (1 << 2)
+#define PUMA_SOC_TE_CPU_THROT       (1 << 3)
