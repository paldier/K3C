+#define PUMA_PUNIT_TE_AUX1       0xB6
+#define PUMA_PUNIT_TE_AUX2       0xB7
+#define PUMA_PUNIT_TE_AUX3       0xB8
 #define PUMA_SOC_THERMAL_TRIPS	   4
