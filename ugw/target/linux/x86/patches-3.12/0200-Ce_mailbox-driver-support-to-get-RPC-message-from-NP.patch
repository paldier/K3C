+/* RPC-IF structure */
+struct npcpu_rpc_info
+{
+        unsigned int npcpu_ipv4_addr;
+        unsigned int appcpu_ipv4_addr;
+        unsigned int netmask;
+        unsigned int vlan_id;
+}__attribute__((packed));
