       attribute_value = netss_set_attribute(NETSS_SERVICE_LEVEL_ATTR, attribute_value, NETSS_SERVICE_ID_MAX);
    }
-  else
+  else if (strncmp(attr->attr.name, "netip_soft_off", 14) == 0)
