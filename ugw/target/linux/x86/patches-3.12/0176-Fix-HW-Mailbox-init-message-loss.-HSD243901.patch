+            if(pnetss_drv_data->pending_interrupts & (1<<subdevice))
+            {
+                irq_info->func(pnetss_drv_data->irq_num, irq_info->args);
+                netss_ack_irq(subdevice);
+                pnetss_drv_data->pending_interrupts &= ~(1<<subdevice);
