	int "NAND Flash OOB Size"
        depends on UBOOT_CONFIG_NAND_ECC_BCH
        depends on UBOOT_CONFIG_DRIVER_GRX500
	default "64" if ( UBOOT_CONFIG_NAND_PAGE_SIZE = 0x800) 
	default "448" if ( UBOOT_CONFIG_NAND_PAGE_SIZE = 0x2000)




